<div class="container">
  <div class="main__inner">
    <h3>Admin section</h3>

    <%= form_with(model: @review) do |f| %>
      <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div>
        <%= f.label :medium %>
        <%= f.text_field :medium %>
      </div>

      <div>
        <%= f.label :author %>
        <%= f.text_field :author %>
      </div>

      <div>
        <%= f.label :publisher %>
        <%= f.text_field :publisher %>
      </div>

      <div>
        <%= f.label :director %>
        <%= f.text_field :director %>
      </div>

      <div>
        <%= f.label :actors %>
        <%= f.text_field :actors %>
      </div>

      <div>
        <%= f.label :country %>
        <%= f.text_field :country %>
      </div>

      <div>
        <%= f.label :venue %>
        <%= f.text_field :venue %>
      </div>

      <div>
        <%= f.label :writer %>
        <%= f.text_field :writer %>
      </div>

      <div>
        <%= f.label :artist %>
        <%= f.text_field :artist %>
      </div>

      <div>
        <%= f.label :label %>
        <%= f.text_field :label %>
      </div>

      <div>
        <%= f.label :text %>
        <%= f.text_area :text %>
      </div>

      <div>
        <%= f.label :running_time %>
        <%= f.text_field :running_time %>
      </div>

      <div>
        <%= f.label :date_publication %>
        <%= f.text_field :date_publication %>
      </div>

      <div>
        <%= f.label :date_release %>
        <%= f.text_field :date_release %>
      </div>

      <div>
        <%= f.label :date_opening %>
        <%= f.text_field :date_opening %>
      </div>

      <div>
        <%= f.label :date_closing %>
        <%= f.text_field :date_closing %>
      </div>

      <div>
        <%= f.label :date_event %>
        <%= f.text_field :date_event %>
      </div>

      <div>
        <%= f.label :caption %>
        <%= f.text_field :caption %>
      </div>

      <div>
        <%= f.label :thumbnail_image %>
        <%= f.file_field :thumbnail_image %>
      </div>

      <div>
        <%= f.label :main_image %>
        <%= f.file_field :main_image %>
      </div>

      <div>
        <%= f.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>
